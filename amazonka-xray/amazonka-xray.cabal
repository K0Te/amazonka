    -- distribution package.
    other-modules:
          Test.AWS.XRay
        , Test.AWS.Gen.XRay
        , Test.AWS.XRay.Internal

    build-depends:
          amazonka-core == 1.6.1.*
        , amazonka-test == 1.6.1.*
        , amazonka-xray
        , base
        , bytestring
        , case-insensitive
        , tasty
        , tasty-hunit
        , text
